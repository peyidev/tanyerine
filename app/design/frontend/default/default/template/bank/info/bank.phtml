$reference = $this->getInfo()->getBankReference();
$expiry = $this->getInfo()->getBankExpiryDate();
?>

<dl class="bank">
  <dt><?php echo "Purchase Info:"; ?></dt>
  <dd class="offset">
    <table class="info-table">
      <tbody>
        <tr>
          <?php if (empty($reference) != true) {?>
          <th><?php echo $this->__('Service Name: %s', $service_name) ?></th>
          <th><?php echo $this->__('Service Number: %s', $service_number) ?></th>
          <th><?php echo $this->__('Bank Name: %s', $bank_name) ?></th>
          <th><?php echo $this->__('Reference Number: %s', $reference) ?></th>
          <th><?php echo $this->__('Expiry Date: %s', $expiry) ?></th>
          <?php } else if (get_class($this) == "Conekta_Bank_Block_Info_Bank") { ?>
          <th><?php echo $this->__('You will receive an invoice via email.') ?></th>
          
          <?php } ?>
        </tr>
      </tbody>
    </table>
  </dd>
</dl>
